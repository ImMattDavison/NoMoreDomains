{
  "manifest_version": 3,
  "name": "No More Domains",
  "version": "1.0.0",
  "description": "Need to stop buying domain names? No More Domain names blocks all the best known domain registrars and domain name auction sites to help you stop buying so many domains!",
  "action": {
      "default_icon": "assets/icon.png",
      "default_popup": "popup.html"
  },
  "background": {
        "service_worker": "blockpage.js",
        "type": "module"
  },
  "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
  },
  "permissions": [
        "tabs",
        "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "http://*/*", 
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; script-src-elem 'self'; object-src 'self'"
  }
}